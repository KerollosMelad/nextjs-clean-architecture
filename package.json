{
  "name": "nextjs-clean-architecture",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "migration:create": "mikro-orm migration:create --config ./mikro-orm.config.ts",
    "migration:up": "mikro-orm migration:up --config ./mikro-orm.config.ts",
    "migration:down": "mikro-orm migration:down --config ./mikro-orm.config.ts",
    "migration:pending": "mikro-orm migration:pending --config ./mikro-orm.config.ts",
    "migration:fresh": "mikro-orm migration:fresh --config ./mikro-orm.config.ts",
    "schema:create": "mikro-orm schema:create --config ./mikro-orm.config.ts",
    "schema:drop": "mikro-orm schema:drop --config ./mikro-orm.config.ts",
    "schema:update": "mikro-orm schema:update --config ./mikro-orm.config.ts",
    "cache:generate": "mikro-orm cache:generate --combined --ts --config ./mikro-orm.config.ts",
    "cache:generate:win": "$env:DATABASE_URL='postgresql://dummy:dummy@localhost:5432/dummy'; mikro-orm cache:generate --combined --ts --config ./mikro-orm.config.ts",
    "cache:clear": "rmdir /s /q .next temp dist 2>nul || rm -rf .next temp dist",
    "clean:build": "npm run cache:clear && npm run build"
  },
  "dependencies": {
    "@mikro-orm/core": "^6.0.0",
    "@mikro-orm/migrations": "^6.0.0",
    "@mikro-orm/postgresql": "^6.0.0",
    "@mikro-orm/reflection": "^6.4.16",
    "@radix-ui/react-avatar": "^1.1.0",
    "@radix-ui/react-checkbox": "^1.1.1",
    "@radix-ui/react-dropdown-menu": "^2.1.1",
    "@radix-ui/react-label": "^2.1.0",
    "@radix-ui/react-separator": "^1.1.0",
    "@radix-ui/react-slot": "^1.1.0",
    "@sentry/nextjs": "^8.25.0",
    "bcrypt-ts": "^5.0.2",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "dotenv": "^17.0.1",
    "lucia": "^3.2.0",
    "lucide-react": "^0.424.0",
    "next": "14.2.5",
    "next-themes": "^0.3.0",
    "pg": "^8.16.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "reflect-metadata": "^0.2.0",
    "server-only": "^0.0.1",
    "sonner": "^1.5.0",
    "tailwind-merge": "^2.4.0",
    "tailwindcss-animate": "^1.0.7",
    "tsyringe": "^4.8.0",
    "vite-plugin-env-compatible": "^2.0.1",
    "vitest": "^2.0.5",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@mikro-orm/cli": "^6.4.16",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@vitest/coverage-istanbul": "^2.0.5",
    "eslint": "^8",
    "eslint-config-next": "14.2.5",
    "eslint-plugin-boundaries": "^4.2.2",
    "postcss": "^8",
    "prettier": "^3.3.3",
    "tailwindcss": "^3.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5"
  }
}
