{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2020",
    "noEmit": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "outDir": "./dist"
  },
  "ts-node": {
    "esm": false
  },
  "include": [
    "src/**/*",
    "mikro-orm.config.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    ".next"
  ]
} 